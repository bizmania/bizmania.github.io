{
    "singleQuote": false,
    "tabWidth": 4,
    "semi": true,
    "trailingComma": "es5",
    "printWidth": 120,
    "endOfLine": "auto",
    "arrowParens": "avoid",
    "plugins": [
        "@trivago/prettier-plugin-sort-imports"
    ],
    "importOrder": [
        "^react",
        "^@mui",
        "<THIRD_PARTY_MODULES>",
        "^(shared|assets|app)/(.+)$",
        "^components/(.+)$",
        "^./(.+)$"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true,
    "importOrderParserPlugins": [
        "classProperties",
        "decorators-legacy",
        "typescript",
        "jsx"
    ]
}